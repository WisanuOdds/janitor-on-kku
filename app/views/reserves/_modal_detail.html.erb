<div id="modal-detail" class="fixed inset-0 items-center flex justify-center bg-black bg-opacity-50" data-controller="modal-detail animate-fadeIn">
  <div class="bg-white p-6 rounded-lg w-1/3 animate-fadeIn">
    <div class="flex justify-between items-center">
      <h5 class="text-lg font-bold">Reservation Details</h5>
    </div>
    <div class="mt-4">
      <p><strong>Room:</strong> <%= reserve.date %></p>
      <p><strong>Start Time:</strong> <%= reserve.start_timer %></p>
      <p><strong>End Time:</strong> <%= reserve.end_timer %></p>
      <p><strong>Note:</strong> <%= reserve.note %></p>
    </div>
    <div class="mt-6 flex justify-between space-x-4">
      <button  data-action="click->modal-detail#closeAndRedirect" class="inline-flex justify-center rounded-md border border-transparent bg-gray-100 px-5 py-3 text-sm font-medium text-gray-600 hover:bg-gray-200">
        Close
      </button>
    </div>
  </div>
</div>
